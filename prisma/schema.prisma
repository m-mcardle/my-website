// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Image {
  id          Int     @id @default(autoincrement())
  path        String  @unique @default("NotFound.png")
  alt         String
  projects    Project[]
  reports     Report[]
  tech        Tech[]
  goals       Goal[]
}

model Tech {
  id          Int     @id @default(autoincrement())
  text        String
  image       Image   @relation(fields: [imageId], references: [id])
  imageId     Int
  projects    Project[]
  description String?
}

model Project {
  id                Int      @id @default(autoincrement())
  title             String
  github            String
  content           String?
  link              String?
  image             Image?   @relation(fields: [imageId], references: [id])
  imageId           Int    
  year              String   @default("2022")
  infrastructure    Tech[]
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  published         Boolean  @default(false)
}

model Report {
  id                Int      @id @default(autoincrement())
  title             String
  job               String
  company           String
  link              String?
  period            String
  goals             Goal[]
  image             Image    @relation(fields: [imageId], references: [id])
  imageId           Int
}

model Goal {
  id                Int      @id @default(autoincrement())
  title             String
  subtitle          String
  body              String
  outcome           String
  report            Report?   @relation(fields: [reportId], references: [id])
  reportId          Int?
  image             Image    @relation(fields: [imageId], references: [id])
  imageId           Int
}
